# ===========================================
# ENVIRONMENT CONFIG
# ===========================================
NODE_ENV=localfork
DEBUG=true
LOG_LEVEL=debug

# ===========================================
# DATABASE CONFIG (local fork sandbox)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=centrifuge_rwa_localfork
DB_USER=centrifuge_user
DB_PASSWORD=localfork_dev_password  # Use dev-specific password
DB_SSL=false
DB_MAX_CONNECTIONS=10

# ===========================================
# CENTRIFUGE CONFIG (mainnet state in fork)
# ===========================================
CENTRIFUGE_NETWORK=mainnet
CENTRIFUGE_RPC_URL=wss://fullnode.centrifuge.io
CENTRIFUGE_ADMIN_KEYSTORE_PATH=E:/Centrifuge-RWA-Tokenization-CLI/centrifuge-keystore.json
CENTRIFUGE_ADMIN_KEYSTORE_PASSWORD=localfork_dev_password

# ===========================================
# ETHEREUM / TINLAKE CONFIG (Hardhat fork)
# ===========================================
ETHEREUM_RPC_URL=http://127.0.0.1:8545
ETHEREUM_KEYSTORE_PATH=E:/Centrifuge-RWA-Tokenization-CLI/ethereum-keystore.json
ETHEREUM_KEYSTORE_PASSWORD=localfork_dev_password

# Hardhat Default Account #0 (10,000 ETH)
ETHEREUM_ADMIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
WALLET_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# Contract addresses (mainnet addresses work in fork)
TINLAKE_BORROW_CONTRACT=0x53b2d22d07E069a3b132BfeaaD275b10273d381E

# ===========================================
# WALLET CONFIG (local development)
# ===========================================
WALLET_TYPE=sr25519
WALLET_SEED=dummy_seed_for_localfork_development_only

# ===========================================
# DEVELOPMENT & TESTING CONFIG
# ===========================================
FORK_BLOCK_NUMBER=19500000  # Pin to specific block for consistency
GAS_LIMIT=8000000
GAS_PRICE=20000000000  # 20 Gwei
NETWORK_TIMEOUT=30000  # 30 seconds

