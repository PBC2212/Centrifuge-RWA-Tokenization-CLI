# Production Environment Configuration
# Copy to .env and fill in your actual values

# Database Configuration
DB_HOST=your-production-db-host.amazonaws.com
DB_PORT=5432
DB_NAME=centrifuge_rwa_prod
DB_USER=centrifuge_user
DB_PASSWORD=your-super-secure-password
DB_SSL=true
DB_MAX_CONNECTIONS=20

# Centrifuge Configuration
CENTRIFUGE_NETWORK=mainnet
CENTRIFUGE_RPC_URL=wss://fullnode.centrifuge.io
CENTRIFUGE_API_KEY=your-centrifuge-api-key
CENTRIFUGE_ADMIN_SEED=your-admin-seed-phrase

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your-infura-key

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key
WALLET_ENCRYPTION_ROUNDS=100000

# KYC/AML Configuration
KYC_PROVIDER=jumio
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret
KYC_WEBHOOK_SECRET=your-webhook-secret

# IPFS Configuration
IPFS_GATEWAY_URL=https://your-ipfs-gateway.com
IPFS_API_KEY=your-ipfs-api-key

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Application Configuration
APP_ENV=production
APP_NAME=Centrifuge RWA CLI
APP_VERSION=1.0.0
API_RATE_LIMIT=100

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Compliance
COMPLIANCE_MODE=strict
MAX_TRANSACTION_AMOUNT=1000000
TRANSACTION_MONITORING=true
AML_SCREENING=true