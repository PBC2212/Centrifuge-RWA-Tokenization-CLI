    "start": "node dist/cli/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "hardhat": "hardhat",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "init-wallet": "tsx src/cli/index.ts init-wallet",
    "check-balance": "tsx src/cli/index.ts check-balance",
    "list-pools": "tsx src/cli/index.ts list-pools",
    "check-db": "tsx src/cli/index.ts check-db",
    "pledge-asset": "tsx src/cli/index.ts pledge-asset",
    "list-assets": "tsx src/cli/index.ts list-assets",
