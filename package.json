    "repay-loan": "tsx src/cli/production-index.ts repay-loan",
    "liquidation-check": "tsx src/cli/production-index.ts liquidation-check",
    "portfolio-summary": "tsx src/cli/production-index.ts portfolio-summary",
    "prod": "tsx src/cli/minimal-production.ts",
    "prod-health": "tsx src/cli/minimal-production.ts health",
