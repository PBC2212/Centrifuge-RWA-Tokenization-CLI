    "@polkadot/keyring": "^13.5.5",
    "argon2": "^0.40.3",
    "axios": "^1.7.4",
    "commander": "^12.1.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "inquirer": "^12.9.2",
    "ipfs-http-client": "^60.0.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "prompt-sync": "^4.2.0",
    "readline-sync": "^1.4.10",
    "tweetnacl": "^1.0.3",
