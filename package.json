{
  "name": "centrifuge-rwa-cli",
  "version": "0.2.0",
  "private": true,
  "description": "Command-line decentralized RWA lending platform integrated with the Centrifuge Protocol (Hub-and-Spoke).",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "bin": {
    "rwa": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "hardhat": "hardhat",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "init-wallet": "tsx src/cli/index.ts init-wallet",
    "check-balance": "tsx src/cli/index.ts check-balance",
    "list-pools": "tsx src/cli/index.ts list-pools",
    "check-db": "tsx src/cli/index.ts check-db",
    "pledge-asset": "tsx src/cli/index.ts pledge-asset",
    "list-assets": "tsx src/cli/index.ts list-assets",
    "production": "tsx src/cli/production-index.ts",
    "health": "tsx src/cli/production-index.ts health",
    "wallet": "tsx src/cli/production-index.ts wallet",
    "pools": "tsx src/cli/production-index.ts pools",
    "assets": "tsx src/cli/production-index.ts assets",
    "database": "tsx src/cli/production-index.ts database",
    "compliance": "tsx src/cli/production-index.ts compliance",
    "interactive": "tsx src/cli/production-index.ts interactive",
    "admin": "tsx src/cli/production-index.ts admin",
    "borrow-against-asset": "tsx src/cli/production-index.ts borrow-against-asset",
    "list-borrow-positions": "tsx src/cli/production-index.ts list-borrow-positions",
    "repay-loan": "tsx src/cli/production-index.ts repay-loan",
    "liquidation-check": "tsx src/cli/production-index.ts liquidation-check",
    "portfolio-summary": "tsx src/cli/production-index.ts portfolio-summary",
    "prod": "tsx src/cli/minimal-production.ts",
    "prod-health": "tsx src/cli/minimal-production.ts health",
    "prod-wallet": "tsx src/cli/minimal-production.ts wallet",
    "prod-assets": "tsx src/cli/minimal-production.ts assets",
    "prod-pools": "tsx src/cli/minimal-production.ts pools",
    "prod-borrow": "tsx src/cli/minimal-production.ts borrow",
    "prod-portfolio": "tsx src/cli/minimal-production.ts portfolio",
    "prod-interactive": "tsx src/cli/minimal-production.ts interactive",
    "mint-nft": "tsx src/cli/minimal-production.ts mint-nft",
    "collateralize": "tsx src/cli/minimal-production.ts collateralize",
    "repay": "tsx src/cli/minimal-production.ts repay",
    "_comment_enhanced_contracts": "=== ENHANCED PROPERTY NFT SCRIPTS ===",
    "compile": "hardhat compile",
    "test:contracts": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy-secure-property-nft.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy-secure-property-nft.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-secure-property-nft.ts --network mainnet",
    "verify": "hardhat verify --network mainnet",
    "_comment_property_management": "=== PROPERTY MANAGEMENT ===",
    "property:mint": "tsx src/utils/mint-property.ts",
    "property:verify": "tsx src/utils/verify-property.ts",
    "property:update-value": "tsx src/utils/update-property-value.ts",
    "property:batch-verify": "tsx src/utils/batch-verify-properties.ts",
    "property:list": "tsx src/utils/list-properties.ts",
    "_comment_governance": "=== MULTI-SIG GOVERNANCE ===",
    "governance:propose": "tsx src/utils/propose-governance-action.ts",
    "governance:vote": "tsx src/utils/vote-on-proposal.ts",
    "governance:execute": "tsx src/utils/execute-governance-action.ts",
    "governance:add-member": "tsx src/utils/add-governance-member.ts",
    "_comment_lending": "=== LENDING OPERATIONS ===",
    "lending:deploy-pool": "tsx src/utils/deploy-lending-pool.ts",
    "lending:issue-loan": "tsx src/utils/issue-loan.ts",
    "lending:lock-collateral": "tsx src/utils/lock-collateral.ts",
    "lending:borrow": "tsx src/utils/borrow-against-property.ts",
    "lending:repay": "tsx src/utils/repay-loan.ts",
    "_comment_testing": "=== TESTING & VALIDATION ===",
    "test:property-nft": "tsx src/test/test-property-nft.ts",
    "test:lending-flow": "tsx src/test/test-lending-flow.ts",
    "test:governance": "tsx src/test/test-governance.ts",
    "test:gas-optimization": "tsx src/test/test-gas-optimization.ts",
    "test:security": "tsx src/test/test-security-features.ts",
    "_comment_utils": "=== UTILITIES ===",
    "utils:setup-accounts": "tsx src/utils/setup-test-accounts.ts",
    "utils:fund-accounts": "tsx src/utils/fund-test-accounts.ts",
    "utils:check-contracts": "tsx src/utils/check-contract-status.ts",
    "utils:ipfs-upload": "tsx src/utils/upload-to-ipfs.ts",
    "utils:generate-docs": "tsx src/utils/generate-property-docs.ts"
  },
  "dependencies": {
    "@centrifuge/sdk": "^0.0.0-alpha.51",
    "@commander-js/extra-typings": "^12.1.0",
    "@polkadot/api": "^16.4.4",
    "@polkadot/keyring": "^13.5.5",
    "argon2": "^0.40.3",
    "axios": "^1.7.4",
    "commander": "^12.1.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "inquirer": "^12.9.2",
    "ipfs-http-client": "^60.0.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "prompt-sync": "^4.2.0",
    "readline-sync": "^1.4.10",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^9.0.1",
    "viem": "^2.33.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/inquirer": "^9.0.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.14.12",
    "@types/pg": "^8.11.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^1.6.0",
    "chai": "^4.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "prettier": "^3.3.3",
    "solidity-coverage": "^0.8.16",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "tsx": "^4.16.2",
    "typechain": "^8.3.2",
    "typescript": "^5.5.4"
  },
  "hardhat": {
    "networks": [
      "localhost",
      "sepolia",
      "mainnet"
    ],
    "solidity": "0.8.19"
  },
  "keywords": [
    "centrifuge",
    "rwa",
    "real-world-assets",
    "defi",
    "lending",
    "borrowing",
    "tokenization",
    "property-nft",
    "multi-signature",
    "ethereum",
    "hardhat"
  ]
}
